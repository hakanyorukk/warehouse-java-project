<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%level] %c - %msg%n"/>
        </Console>

        <!-- File output -->
        <File name="File" fileName="logs/warehouse-app.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%level] %c - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Hibernate logs -->
        <Logger name="org.hibernate" level="WARN"/>

        <!-- Your project -->
        <Logger name="com.jmc.warehouse" level="DEBUG"/>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>

</Configuration>
